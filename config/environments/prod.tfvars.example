# Production Environment Configuration
# Copy this file to prod.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"
aws_profile = "default"

# Project Configuration
project_name = "aws-devops-automation"
environment = "prod"
cost_center = "devops"

# Networking Configuration
vpc_cidr = "10.2.0.0/16"
public_subnets = ["10.2.1.0/24", "10.2.2.0/24"]
private_subnets = ["10.2.10.0/24", "10.2.11.0/24"]
database_subnets = ["10.2.20.0/24", "10.2.21.0/24"]

# Compute Configuration
instance_type = "t3.medium"
min_size = 3
max_size = 6
desired_capacity = 3

# Database Configuration
db_instance_class = "db.t3.medium"
db_allocated_storage = 100
db_engine = "postgres"
db_engine_version = "14.7"

# Monitoring Configuration
enable_cloudwatch = true
enable_xray = true
enable_cloudtrail = true

# Security Configuration
enable_guardduty = true
enable_config = true
enable_macie = true

# Tags
tags = {
  Environment = "prod"
  Project     = "aws-devops-automation"
  Owner       = "devops-team"
  CostCenter  = "devops"
  ManagedBy   = "terraform"
}
